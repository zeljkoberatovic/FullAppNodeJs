  <script>
   $(".delete-user-btn").on('click', function () {
    let id = $(this).attr('data-id');
    console.log(id);
    let potvrda = confirm("Da li ste sigurni ?");
    if (potvrda) {
        fetch(`/delete/user/${id}`, {
            method: 'DELETE', 
        })
        .then(response => {
            if (response.ok) {
                return response.json(); // Parsiranje odgovora u JSON format ako je status uspješan
            }
            throw new Error('Network response was not ok.');
        })
        .then(data => {
            // Ovdje proveravamo odgovor od servera
            if (data.message === "ok") {
                window.location.href = "/admin";
            } else {
                alert("Došlo je do greške prilikom brisanja korisnika.");
            }
        })
        .catch(err => {
            //console.error("Greška prilikom slanja zahteva:", err);
            alert("Došlo je do greške prilikom slanja zahteva za brisanje korisnika.");
        });
    }
});

</script>
